// Keep this consistent with tsconfig.json at repo root.
// For notes and comments, see tsconfig.json at repo root.
{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "experimentalResolver": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
